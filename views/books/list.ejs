<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
        integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <title>Book Library</title>
</head>

<body>
    <section class="bookList">
        <span class="text" title="Book Library">Book Library</span>

        <a href="/books/new">
            <button class="new">+ Create New</button>
            <div class="liquid"></div>
        </a>
        <div class="container">
            <div class="row">
                <% books.forEach(book => { %>
                <div class="card">
                    <div class="card-body">
                        <div class="left">
                            <img src="data:<%= book.img.contentType %>;base64,<%= book.img.data %>" width="200px">
                        </div>
                        <div class="right">
                            <h5 class="card-title text-center"><%= book.title %></h5>
                            <p class="card-title text-muted"><%= book.author %></p>
                            <p class="card-text"><%= book.description %></p>
                            <div class="buttons">
                                <button><a href="books/<%= book.slug %>" class="read"><i
                                            class="fas fa-eye"></i></a></button>
                                <form action="/books/<%= book.id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="delete"
                                        onclick="return confirm('Are you sure you want to delete this book?')"><i
                                            class="fas fa-trash-alt"></i></button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
        </div>
    </section>
</body>

</html>